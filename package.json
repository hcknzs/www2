{
	"name": "hcknzs-www2",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scriptlint": {
		"ignoreScripts": [
			"build:gql:schema"
		]
	},
	"scripts": {
		"build": "run-s build:gql:schema build:svg build:remix",
		"build:gql:schema": "./scripts/gql.sh",
		"build:remix": "remix build",
		"build:svg": "pupper-svg sprite -i ./svg-masters -o ./public/sprite.svg  -c ./app/components/icons/svg.tsx -H /sprite.svg",
		"dev": "CMS_INCLUDE_DRAFTS=true run-p dev:*",
		"dev:remix": "remix dev --manual",
		"other:typecheck": "tsc",
		"postinstall": "run-s build:gql:schema build:svg",
		"start": "remix-serve ./build/index.js",
		"test": "run-p test:*",
		"test:lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"test:scripts": "scriptlint --strict --fix",
		"test:tsue": "pupper-tsue",
		"test:types": "tsc --noEmit"
	},
	"dependencies": {
		"@fontsource/ibm-plex-mono": "^5.1.0",
		"@fontsource/ibm-plex-sans": "^5.1.0",
		"@headlessui/react": "^2.2.0",
		"@peerigon/pupper": "^2.0.0",
		"@react-hookz/web": "^24.0.4",
		"@remix-run/css-bundle": "2.10.2",
		"@remix-run/node": "2.10.2",
		"@remix-run/react": "2.10.2",
		"@remix-run/serve": "2.10.2",
		"@t3-oss/env-core": "^0.11.1",
		"@tailwindcss/typography": "^0.5.15",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"gql.tada": "^1.8.10",
		"isbot": "^5.1.17",
		"react": "^18.3.1",
		"react-datocms": "^7.0.4",
		"react-dom": "^18.3.1",
		"tiny-invariant": "^1.3.3",
		"uberschrift": "^1.1.13",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@0no-co/graphqlsp": "^1.12.16",
		"@remix-run/dev": "2.10.2",
		"@remix-run/eslint-config": "2.10.2",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^8.57.1",
		"eslint-config-peerigon": "^40.0.0",
		"eslint-plugin-canonical": "^5.0.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.49",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"scriptlint": "^3.0.0",
		"tailwindcss": "^3.4.15",
		"typescript": "^5.6.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
